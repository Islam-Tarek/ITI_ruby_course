<h2><%= article.title %></h2>
<p>
  <%= article.body %>
</p>

<div class="mt-4 space-x-2">
  <%= link_to "Show", article, class: "text-blue-600 hover:text-blue-800" %>
  <% if policy(article).update? %>
    <%= link_to "Edit", edit_article_path(article), class: "text-blue-600 hover:text-blue-800" %>
  <% end %>
  <% if policy(article).destroy? %>
    <%= button_to "Delete", article, method: :delete, class: "text-red-600 hover:text-red-800", form: { data: { turbo_confirm: "Are you sure?" } } %>
  <% end %>
</div>
