<p style="color: green"><%= notice %></p>

<%= render @article %>

<% if @article.image.present? %>
  <div>
    <%= image_tag @article.image.url, alt: @article.title, style: "max-width: 400px;" %>
  </div>
<% end %>

<div class="mt-4 space-x-2">
  <%= link_to "Back to articles", articles_path, class: "text-gray-600 hover:text-gray-800" %>
  
  <% if policy(@article).update? %>
    | <%= link_to "Edit this article", edit_article_path(@article), class: "text-blue-600 hover:text-blue-800" %>
  <% end %>

  <% if policy(@article).destroy? %>
    <%= button_to "Destroy this article", @article, method: :delete, class: "text-red-600 hover:text-red-800 mt-2", form: { data: { turbo_confirm: "Are you sure?" } } %>
  <% end %>
</div>
